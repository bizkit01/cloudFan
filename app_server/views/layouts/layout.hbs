<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/libs/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/layout.css">
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/stylesheets/dashbord.css">
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <img class="cloudfan-logo" src="/images/global/global-cloudfan-logo-hollow.png"/>
          </a>
          <a class="navbar-brand" href="/">
            cloudFan
          </a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            {{#each links }}
              {{#if active}}
              <li class="active"><a href= {{ link }}>{{ linkTitle }}<span class="sr-only">(current)</span></a></li>
              {{else}}
              <li><a href= {{ link }}>{{ linkTitle }}</a></li>
              {{/if}}
            {{/each }}
          </ul>
        </div>
      </div>
    </nav>

    <div class="cloudFan-content">
      {{{ body }}}
    </div>

    <footer class="cloudFan-footer">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="col-xs-12 col-sm-2">
          <img src="/images/global/global-cloudfan-logo-emblem.png"/>
        </div>
        <div class="col-xs-12 col-sm-5">
          <span>&copy {{ copyright }}</span>
          <span> Developer: {{ developer }}</span>
        </div>
        <div class="col-xs-12 col-sm-5">
          <span> Contact: {{ contact }}</span>
          <span> GitHub Repositories: <a href="{{ github }}">{{ github }}</a></span>
        </div>
      </div>
    </footer>
  </body>
  <script type="text/javascript" src="/libs/jquery/jquery-3.1.1.min.js"></script>
  <script type="text/javascript" src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/libs/angular/angular.min.js"></script>
  <script type="text/javascript" src="/libs/angular/angular-route.min.js"></script>
  <script type="text/javascript" src="/appConfig_client.js"></script>
  <script type="text/javascript" src="/controllers/index_client.controller.js"></script>
</html>
